        //расчитываем площадь прямоугольника 
        private void Button_Click(object sender, RoutedEventArgs e)
        {
      
            int a = Convert.ToInt32(tb1.Text);
            int b = Convert.ToInt32(tb2.Text);
            if (a =true || b= true)
            {
                rez.Text = Convert.ToString((a * b));
            }
